<div id="accelasearch-app" class="mb-5">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity z-[501]" id="as-backdrop" style="display:none"></div>
  <div id="as-modals"></div>
  <div id="as-toaster"></div>
  <div id="notifications">
    {if !$CRONJOB_EXECUTED && $tpl_to_render == "dashboard"}
    <div class="notification my-4">
      <div class="rounded-md bg-red-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3 flex-1 md:flex md:justify-between">
            <p class="text-sm text-red-700">
              {l s='Your cronjob has never executed, setup the cronjob to assure that your data informations are updated' mod='accelasearch'}
            </p>
            <p class="mt-3 text-sm md:mt-0 md:ml-6">
              <a href="javascript:void(0)" class="whitespace-nowrap font-medium text-red-700 hover:text-red-600 showCronModal">{l s='How to setup' mod='accelasearch'} <span aria-hidden="true">&rarr;</span></a>
            </p>
          </div>
        </div>
      </div>
    </div>
    {/if}
    {if $CRONJOB_EXECUTED && $tpl_to_render == "dashboard" && !$CRONJOB_EXECUTED_RECENTLY}
    <div class="notification my-4">
      <div class="rounded-md bg-blue-50 p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3 flex-1 md:flex md:justify-between">
            <p class="text-sm text-blue-700">
              {l s='Your cronjob isn\'t configured properly, it\'s over 10 minutes about last execution' mod='accelasearch'}
            </p>
            <p class="mt-3 text-sm md:mt-0 md:ml-6">
              <a href="javascript:void(0)" class="whitespace-nowrap font-medium text-blue-700 hover:text-blue-600 showCronModal">{l s='How to setup' mod='accelasearch'} <span aria-hidden="true">&rarr;</span></a>
            </p>
          </div>
        </div>
      </div>
    </div>
    {/if}
  </div>
  {block name=as_content}{/block}
</div>
